<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Conta">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="*, *"
                  RowDefinitions="*, *">


            <ImageButton x:Name="btnImgPix" Clicked="Button_Clicked" BackgroundColor="Transparent" BorderColor="#180330" 
                    Source="AppBancoDigital.Imagens.pix.png"
                    Grid.Column="0" Grid.Row="0" Scale="0.3"/>
            
            <ImageButton x:Name="btnImgPagar" Clicked="Button_Clicked1" BackgroundColor="Transparent" BorderColor="#180330"
             HorizontalOptions="FillAndExpand" Grid.Column="0" Grid.Row="1"/>
            
            <ImageButton x:Name="btnImgTrans" Clicked="Button_Clicked_2" BackgroundColor="Transparent" BorderColor="#180330"
                    Source="trans.png" 
                    HorizontalOptions="FillAndExpand"/>
            
            <ImageButton x:Name="btnImgDep" Clicked="Button_Clicked_3" BackgroundColor="Transparent" BorderColor="#180330"
                  />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>