<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Login"
             BackgroundColor="#1DB954">

    
    

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Vitus" TextColor="Black" FontSize="75" HorizontalOptions="CenterAndExpand"/>
            <Frame CornerRadius="10" x:Name="frm_dados" VerticalOptions="Center"
                   BackgroundColor="#010012" BorderColor="White" Opacity="1">

                <StackLayout>

                    <Label Text="Login Conta" TextColor="#1DB954" FontSize="Title" HorizontalOptions="Center"/>

                    <Label Text="CPF:" TextColor="#1DB954" FontSize="Large"/>

                    <Entry x:Name="conta_cpf" TextColor="#1DB954" Placeholder="Insira seu CPF" PlaceholderColor="#1DB954"/>

                    <Label Text="Senha:" TextColor="#1DB954" FontSize="Large"/>

                    <Entry IsPassword="True" x:Name="conta_pw" Placeholder="Insira sua senha" TextColor="#1DB954" PlaceholderColor="#1DB954"/>

                    <Button Text="Conectar" TextColor="Black" Clicked="Button_Clicked" BackgroundColor="#1DB954"/>

                </StackLayout>
                
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>